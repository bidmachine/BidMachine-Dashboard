{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es2018",
    "module": "commonjs",
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "baseUrl": "./src",
    "paths": {
      "*": [
        "node_modules/*",
        "typings/*",
        "./*"
      ]
    },
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext",
      "dom",
      "dom.iterable"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src",
    "./typings/**/*"
  ]
}
